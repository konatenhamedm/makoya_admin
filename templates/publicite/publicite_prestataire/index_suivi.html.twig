      <div class="row">
        <div class="col-sm-12">
          <div id="grid_app_publicite_publicite_prestataire_suivi_{{ grid_id }}" class="grid-dt-wrapper">Chargement....</div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block java %}
  <script src="{{ asset('assets/js/datatables.js') }}"></script>
  <script>
    
    $(function () {
      const grid_prefix_id = "{{ grid_id }}";
      const $old_grid = $('#grid_app_publicite_publicite_prestataire_suivi_' + grid_prefix_id);
      init_select2('.has-select2');

      function loadDataTable($grid, dateDebut,dateFin ,user,options = null, contents = '') {
        $grid.initDataTables(
          options
          ? options
          : {{ datatable_settings(datatable) }}, {
          searching: true,
          ajaxUrl: Routing.generate('app_publicite_publicite_prestataire_suivi_index', {
            user: user,
            dateDebut: dateDebut,
            dateFin: dateFin,
           
            
          }),
          language: {
            url: asset_base_path + "/js/i18n/French.json"
          },
          headerCallback: function (tHead, aData, iStart, iEnd, aiDisplay) {},
          initComplete: function (e, oSettings, json) {},
        
          drawCallback: function (row, data) {}
        });
      }

      const $user = $('#{{ form.user.vars.id }}');
      const $dateDebut = $('#{{ form.dateDebut.vars.id }}');
      const $dateFin = $('#{{ form.dateFin.vars.id }}');
      
      

      $user.on('change', function () {
        const val = $(this).val();
         
     
      });

      loadDataTable($old_grid, null,null,null, {{ datatable_settings(datatable) }});

      $('.btn-filter').on('click', function (e) {
        e.preventDefault();
        const $this = $(this);
        const $form = $this.closest('form');

        //alert($dateDebut.val());
        load_grid_data($form, $this,$dateDebut.val(),$dateFin.val(),$user.val());
      });


      $('.btn-imprimer').on('click', function (e) {
        e.preventDefault();
        const $this = $(this);
        const $form = $this.closest('form');

        //alert($niveau.val());
        imprimer($user.val());
      });


      function imprimer(niveau){
        $.ajax({
          url: "/admin/comptabilite/inscription/imprime/all",
          type: 'GET',
          async: false,
          data: {
            user: niveau,
            
          },
         
     
        });
      }

      function load_grid_data($form, $button,dateDebut,dateFin,user) {
        const id = $old_grid.find('table').attr('id');
        const $table = $old_grid.find(`#${id}`);
        const table = $table.DataTable();
        $.ajax({
          url: $form.attr('action'),
          type: $form.attr('method'),
          data: {
            user: user,
            dateDebut: dateDebut,
            dateFin: dateFin,

        
          },
          beforeSend: function () {
            $button.append('<span class="spinner-border spinner-ajax spinner-border-sm" role="status" aria-hidden="true"></span> ');
            $button.prop('disabled', true);
          },
          complete: function () {
            $button.prop('disabled', false);
            $button.find('.spinner-ajax').remove();
          },
          success: function (html) {
            table.destroy();
            if ($table.length) {
              $table.empty();
            }

           // let grid_val = `${niveau}_${caissiere}_${dateDebut}_${dateFin}`;
            let grid_val = `${user}_${dateDebut}`;


            //alert(grid_val)

            $old_grid.attr('id', `grid_app_publicite_publicite_prestataire_suivi_${grid_val}`).empty().html(`
                                    <div class="spinner spinner-track spinner-primary mr-15 text-primary">
                                        <div class="ml-15">Chargement des données de la grille</div>
                                    </div>
                            `);
            var options = {{ datatable_settings(datatable) }};
            var name = `dt_app_publicite_publicite_prestataire_suivi_${grid_val}`;

            options['name'] = name;

            console.log(name);

            loadDataTable($old_grid, dateDebut,dateFin,user ,options)
          }
        });
      }

    });
  </script>
{% endblock %}

