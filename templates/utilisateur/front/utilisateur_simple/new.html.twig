				<label class="sr-onl" for="userinput1">
					Lattitude*
				</label>
				{{ form_widget(form.lattitude) }}
			</div>
			<div class="form-group col-md-6">
				<label class="sr-onl" for="userinput1">
				Longitude*
				</label>
				{{ form_widget(form.longitude) }}
			</div>
    	</div>
        <div class="row">
			<div class="form-group col-md-6">
				<label class="sr-onl" for="userinput1">
					Email*
				</label>
				{{ form_widget(form.email) }}
			</div>
			<div class="form-group col-md-6">
				<label class="sr-onl" for="userinput1">
					Contact*
				</label>
				{{ form_widget(form.contact) }}
			</div>
		</div>

		 <div class="row">
			<div class="form-group col-md-4">
				<label class="sr-onl" for="userinput1">
					Région*
				</label>
				{{ form_widget(form.region) }}
			</div>
			<div class="form-group col-md-4">
				<label class="sr-onl" for="userinput1">
				Commune*
				</label>
				{{ form_widget(form.commune) }}
			</div>
			<div class="form-group col-md-4">
				<label class="sr-onl" for="userinput1">
				Quartier*
				</label>
				{{ form_widget(form.quartier) }}
			</div>
    	</div>
	</div>
	<div
		class="modal-footer">
		{# {{ include('_includes/ajax/loader.html.twig') }} #}
		<button type="button" class="btn btn-default btn-sm" data-bs-dismiss="modal">Annuler</button>
		<button type="submit" class="btn btn-main btn-ajax btn-sm">
			<span class="spinner-border d-none  spinner-ajax spinner-border-sm" role="status" aria-hidden="true"></span>
			Valider</button>
	</div>
	{{ form_widget(form._token) }}
	{{ form_end(form, {render_rest: false}) }}
{% endblock %}
